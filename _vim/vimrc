set nocompatible
set nobackup

set encoding=utf-8
scriptencoding utf-8

map <esc>OA <Up>
map <esc>OB <Down>
map <esc>OC <Right>
map <esc>OD <Left>
map! <esc>OA <Up>
map! <esc>OB <Down>
map! <esc>OC <Right>
map! <esc>OD <Left>


set backspace=start,eol,indent

set clipboard=unnamed,autoselect
set clipboard=unnamedplus
syntax enable
set cindent
set autoindent
set smartindent
set cursorline
set ruler
set number
set showcmd

set list
set listchars=tab:>_,trail:_
highlight IGSpace ctermbg=Red guibg=Red
match IGSpace /　/

set smartcase
set hlsearch
set showmatch


set visualbell
